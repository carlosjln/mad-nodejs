{
	"version": "2.0.0",
	"windows": {
		"command": "C:\\Program Files\\nodejs\\node.exe"
	},
	"linux": {
		"command": "/usr/bin/node"
	},
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "node",
			"args": [
				".\\build_tasks\\create-npm-dist.js"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"echo": true
			},
			"promptOnClose": true,
			"problemMatcher": "$jshint"
		},
		{
			"label": "Create npm package",
			"type": "shell",
			"command": "npm",
			"args": [
				"pack",
				"${workspaceRoot}\\dist\\"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"echo": true
			},
			"promptOnClose": true,
			"problemMatcher": "$jshint"
		},
		{
			"label": "Run tests",
			"type": "shell",
			"command": "npm",
			"args": [
				"test"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"echo": true
			},
			"promptOnClose": true,
			"problemMatcher": "$jshint"
		}
